<div class='text-right'>
  <%= link_to 'List of Items', category_items_path, class: 'btn btn-primary backButton' %>
</div>
<h1> <%= @item.name%> </h1>
<hr class="itemShowHR">

<div class='itemBackground'>
  <div class='col-md-6'>
    <div>
      <h4>Price: <%= number_to_currency(@item.price) %></h4>
    </div>
      <br />
  </div>
  <div class='col-md-6'>
    <div class='descriptionPad'>
      <h4>Description:</h4>
      <div>
        <%= @item.description %>
      </div>
    </div>
  </div>
</div>
<hr class='itemShowHR bigHR'>

<div class='text-center'>
<%= link_to  "Add Item to Shopping Cart", line_items_path(item_id: @item.id), class: 'btn btn-primary backButton', method: :post %>
</div>
<br />

<div class='text-left col-md-6'>
  <h2>Reviews:</h2>
  <hr />
  There are no reviews for this item yet. Be the first!

</div>
