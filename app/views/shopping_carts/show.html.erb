<h1>Shopping Cart for <%= current_user.email %></h1>

<table class="table table.hover">
    <tr>
        <th> Item Name </th>
        <th> Item Cost </th>
    </tr>
    <% @line_items.each do |line_item| %>
    <tr>  
        <td> <%= line_item.item.name %> </td>
        <td> <%= number_to_currency(line_item.item.price) %> </td>
        <td><%= link_to 'Remove', line_item_path(line_item.id), class: 'btn btn-primary', method: :delete %></td>
    </tr>
    <% end %>
</table>