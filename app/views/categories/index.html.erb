<h1>Categories</h1>

<% if @categories.empty? %>
    <h3>Please create catagory.</h3>
<% else %>

    <div class="container">
        <% @categories.each do |category| %>
        
        <div class="row">
            <div class="col-md-4">
                <h2><%= category.name %></h2>
                <%= link_to 'Select Category', category_items_path(category), class: 'btn btn-primary' %>
                <br>
                <% if current_user.admin == true %>
                    <%= link_to 'Edit Category', edit_category_path(category), class: 'btn btn-primary' %>
                    <%= link_to 'Delete Category', category_path(category), method: :delete, class: 'btn btn-primary'%>  
                    
                <% end %>
            </div>
        </div>
        
        
        <% end %>
    </div>
<% end %>

<div class="container new-category">
    <% if current_user.admin == true %>
            <%= link_to 'Create New Category', new_category_path, class: 'btn btn-primary' %> 
                        
    <% end %>
</div>
    